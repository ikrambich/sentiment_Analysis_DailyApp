<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrondpic"
    android:orientation="vertical"
    tools:context=".Diaries">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/transparentPurple"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDiaries">

        <!-- Linear Layout to Stack Elements -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="415dp"
            android:orientation="vertical"
           > <!-- Add padding for spacing -->

            <!-- Title Text -->
            <TextView
                android:id="@+id/tvStory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pacifico_regular"
                android:gravity="center"
                android:text="@string/stories"
                android:textColor="@color/darkPurple"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- EditText with Padding Instead of View -->
            <EditText
                android:id="@+id/edWriting"
                android:layout_width="315dp"
                android:layout_height="329dp"
                android:background="@null"
                android:fontFamily="@font/pacifico_regular"
                android:gravity="top|start"
                android:hint="......"
                android:inputType="textMultiLine"
                android:maxLines="30"
                android:minLines="3"
                android:overScrollMode="always"
                android:padding="10dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textColorHint="@color/darkPurple"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btnSave"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="360dp"
        android:layout_height="61dp"
        android:layout_marginStart="27dp"


        android:layout_marginEnd="27dp"


        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/darkPurple"
        android:fontFamily="@font/pacifico_regular"
        android:text="@string/save"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="@drawable/pen"
        app:iconGravity="textEnd"
        app:iconPadding="10sp"
        app:iconSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tvDiaries"
        android:layout_width="302dp"
        android:layout_height="71dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/border"
        android:fontFamily="@font/pacifico_regular"
        android:gravity="center"
        android:text="@string/action"
        android:textColor="@color/darkPurple"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="225dp"
        android:layout_height="218dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpload"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="294dp"
        android:layout_height="68dp"
        android:layout_marginStart="66dp"


        android:layout_marginEnd="66dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/darkPurple"
        android:text="Upload a Picture"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>